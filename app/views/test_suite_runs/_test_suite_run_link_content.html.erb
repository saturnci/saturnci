<% cache [build, build.updated_at] do %>
  <div style="display: flex; justify-content: space-between">
    <div>
      <div>
        <div style="line-height: 1.3; max-width: 300px;">
          <%= build.commit_message.truncate(60) %>
        </div>

        <div class="test-suite-run-author">
          <%= build.author_name %>
          <%= build.created_at.in_time_zone.strftime("%-m/%-d/%Y %H:%M %Z") %>
        </div>

        <span class="test-suite-run-commit">
          <code><%= build.branch_name.truncate(20) %></code>
          <code><%= abbreviated_hash(build.commit_hash) %></code>
        </span>
      </div>
    </div>

    <div style="width: 90px; text-align: center">
      <div class="test-suite-run-status test-suite-run-status-<%= build.status.parameterize %>">
        <%= build.status %>
      </div>

      <span style="color: #999" data-controller="elapsed-test-suite-run-time" data-elapsed-test-suite-run-time-test-suite-run-created-at-datetime-value="<%= build.created_at %>">
        <% if build.status == "Running" %>
          <div data-elapsed-test-suite-run-time-target="value"></div>
        <% else %>
          <span class="test-suite-run-duration">
            <%= build.duration_formatted %>
          </span>
        <% end %>
      </span>
    </div>
  </div>
<% end %>

<%= turbo_stream_from "build_status_#{build.id}" %>
