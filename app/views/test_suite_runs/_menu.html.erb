<ul class="run-menu tab-menu">
  <li>
    <%= link_to "Overview",
      repository_test_suite_run_path(test_suite_run.repository_id, test_suite_run),
      class: current_tab_name == "overview" ? "active" : "" %>
  </li>

  <% test_suite_run.runs.sorted.each do |run| %>
    <li>
      <%= link_to run.name,
        task_path(run, target_tab_name),
        class: run == @run ? "active" : "" %>
    </li>
  <% end %>
</ul>
